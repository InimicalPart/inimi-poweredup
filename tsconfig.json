{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "removeComments": true,
      "paths": {
        "@src/*": [
          "./src/*"
        ],
        "@/*": [
          "./*"
        ]
      }
    },
    "exclude": [
      "node_modules"
    ]
  }